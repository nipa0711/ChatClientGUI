        <Label x:Name="label" Content="IP" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ipBox" HorizontalAlignment="Left" Height="23" Margin="35,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" Text="localhost"/>
        <Button x:Name="btnConnect" Content="접속" HorizontalAlignment="Left" Margin="280,45,0,0" VerticalAlignment="Top" Width="77" Height="23" Click="btnConnect_Click"/>
